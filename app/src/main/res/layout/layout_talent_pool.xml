<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB242424"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/layer_close_selector"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="282dp"
            android:layout_height="262dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/layer_picture" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="买萌官方演艺人才库上线！"
            android:textColor="@color/color_1"
            android:textSize="@dimen/font_6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@mipmap/layer_art"
            android:drawablePadding="4dp"
            android:text="各大直播平台、企业、经纪在此发掘演艺人才"
            android:textColor="@color/color_11"
            android:textSize="@dimen/font_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawableLeft="@mipmap/layer_home"
            android:drawablePadding="4dp"
            android:text="买萌将在官方人才库中推荐您的主页"
            android:textColor="@color/color_11"
            android:textSize="@dimen/font_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawableLeft="@mipmap/layer_announcement"
            android:drawablePadding="4dp"
            android:text="随时查看、报名官方优质通告"
            android:textColor="@color/color_11"
            android:textSize="@dimen/font_2" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_agree"
        android:layout_width="302dp"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_5"
        android:text="好的" />


</LinearLayout>