<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cdwx.moka.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_4"
        app:right_view_text="提交"
        app:showRightView="true"
        app:titleText="意见反馈" />

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/common_black"
        android:gravity="top|left"
        android:hint="请填写您的问题或建议，我们将快速改进"
        android:padding="18dp"
        android:textColor="@color/color_10"
        android:textColorHint="@color/color_9"
        android:textSize="@dimen/font_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_black"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="联系方式"
            android:textColor="@color/color_10"
            android:textSize="@dimen/font_2" />

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="手机号/微信号(选填)"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/color_10"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/font_3" />
    </LinearLayout>
</LinearLayout>