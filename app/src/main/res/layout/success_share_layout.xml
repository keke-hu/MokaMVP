<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB242424">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/puzzle_success_close_bg" />

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@mipmap/puzzle_success" />

    <TextView
        android:id="@+id/tv_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="制作成功"
        android:textColor="#99ffffff"
        android:textSize="@dimen/font_6" />

    <TextView
        android:id="@+id/tv_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="分享买萌模卡给好友"
        android:textColor="#99ffffff"
        android:textSize="@dimen/font_6" />

    <RadioGroup
        android:id="@+id/rg_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/moment_radio_selector"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:button="@drawable/wechat_radio_selector" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_below="@id/rg_share"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_5"
        android:text="立即分享"
        android:textColor="@color/color_11"
        android:textSize="@dimen/font_4" />

</RelativeLayout>