<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.cdwx.moka.widget.FontTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:maxWidth="104dp"
                android:text="可可可可可"
                android:textSize="@dimen/bottom_information_name_size" />

            <LinearLayout style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_height"
                    style="@style/bottom_information_tv_title_style"
                    android:text="HEIGHT" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_height_content"
                    style="@style/bottom_information_tv_style"
                    android:text="172" />
            </LinearLayout>

            <LinearLayout style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_weight"
                    style="@style/bottom_information_tv_title_style"
                    android:text="WEIGHT" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_weight_content"
                    style="@style/bottom_information_tv_style"
                    android:text="50" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_bust"
                style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_bust"
                    style="@style/bottom_information_tv_title_style"
                    android:text="BUST" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_bust_content"
                    style="@style/bottom_information_tv_style"
                    android:text="85" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_waist"
                style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_waist"
                    style="@style/bottom_information_tv_title_style"
                    android:text="WAIST" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_waist_content"
                    style="@style/bottom_information_tv_style"
                    android:text="67" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hips"
                style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_hips"
                    style="@style/bottom_information_tv_title_style"
                    android:text="HIPS" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_hips_content"
                    style="@style/bottom_information_tv_style"
                    android:text="87" />
            </LinearLayout>


            <LinearLayout style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_shoe_size"
                    style="@style/bottom_information_tv_title_style"
                    android:text="SHOES" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_shoe_size_content"
                    style="@style/bottom_information_tv_style"
                    android:text="35" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_birthday"
                style="@style/bottom_style">

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_birthday"
                    style="@style/bottom_information_tv_title_style"
                    android:text="DATE" />

                <com.cdwx.moka.widget.FontTextView
                    android:id="@+id/tv_birthday_content"
                    style="@style/bottom_information_tv_style"
                    android:text="1991-06" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="@dimen/bottom_qr_width"
            android:layout_height="@dimen/bottom_qr_width"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</RelativeLayout>